void drawLetter(byte* character)
{
  for(int delays=0;delays<100;delays++){
    for(int row=0; row<8; row++) 
     { // iterate each row
      for(int k=0; k<8; k++) // Cleanup cols
      digitalWrite(colPins[k],HIGH); 
      digitalWrite(rowPins[row], HIGH); 
      for(int col=0; col<8; col++) // prepare to write the row
      {
        digitalWrite(colPins[7-col], character[row] & 1 << col ? LOW : HIGH);
      }
      delay(1);
      digitalWrite(rowPins[row],LOW);
    } 
  }
}
